{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/shared",
  "lib": {
    "entryFile": "src/public-api.ts",
    "styleIncludePaths": ["./styles"]
  },
  "assets": [{ "input": "./styles", "glob": "**/*.scss", "output": "styles" }],
  "allowedNonPeerDependencies": [
    "@angular/cdk",
    "@ng-bootstrap/ng-bootstrap",
    "detect-browser",
    "lodash",
    "ng-click-outside",
    "ng2-charts",
    "ngx-cookie-service",
    "ngx-toastr",
    "simplebar-angular",
    "validator"
  ]
}
